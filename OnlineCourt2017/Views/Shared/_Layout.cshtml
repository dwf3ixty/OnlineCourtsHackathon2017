<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Settlement Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/chart")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Online Settlement Portal (OSP)", "Index", "Home", new { area = "" }, new { @class = "navbar-brand hidden-xs" })
                @Html.ActionLink("OSP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand visible-xs" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true">Home <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Case Details", "Index", "Home")</li>
                            <li>@Html.ActionLink("Preferences", "Preferences", "Case")</li>
                        </ul>
                    </li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Why Should I Settle?", "VideoTutorial", "Case")</li>
                        <li>@Html.ActionLink("How Do I Settle?", "Details", "Offer")</li>
                        <li>@Html.ActionLink("Contact Case Officer", "Chat", "Case")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div><img class="pull-right osp-logo" src="~/Content/osp_logo.gif" /></div>
            <p><small>Online Settlement Portal - &copy; @DateTime.Now.Year</small></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
